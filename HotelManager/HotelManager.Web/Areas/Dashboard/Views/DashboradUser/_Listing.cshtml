@model HotelManager.Web.Areas.ViewModel.AllUserToListViewModel


<thead>
    <tr>
        <th data-sortable="" style="width: 19.6275%;"><a href="#" class="dataTable-sorter">Name</a></th>
        <th data-sortable="" style="width: 29.2264%;"><a href="#" class="dataTable-sorter">Position</a></th>


</thead>

<tbody>
    @foreach (var User in Model.hotelUsers)
    {
        <tr>
            <td>@User.FullName</td>
            <td>
                @User.Email
            </td>
            <td>
                @User.UserName
            </td>
            <td>
                @User.Roles.Count
            </td>

            <td>
                <button type="button" class="data-btn btn btn-secondary" data-herf="@Url.Action("Action", "DashboradUser", new { Id = User.Id })" data-bs-toggle="modal" data-bs-target="#ActionForm">
                    更新
                </button>

                <button type="button" class="data-btn btn btn-danger" data-herf="@Url.Action("Delete","DashboradUser",new { Id =User.Id })" data-bs-toggle="modal" data-bs-target="#ActionForm">
                    刪除
                </button>
                <button type="button" class="data-btn btn btn-info" data-herf="@Url.Action("UserRoles", "DashboradUser", new { ID = User.Id })" data-bs-toggle="modal" data-bs-target="#ActionForm"><i class="fas fa-user-shield mr-1"></i> 使用者權限 </button>

                

            </td>
        </tr>
    }

</tbody>

<div class="modal fade" id="ActionForm" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

        </div>
    </div>
</div>


<script>


    $(".data-btn").click(function () {
        $.ajax({
            url: $(this).attr("data-herf"),
            type: "get",

        }).done(function (respone) {
            debugger;
            $(".modal .modal-content").html(respone);
        })
    })
</script>