@model HotelManager.Web.Areas.ViewModel.BookListViewModel
<thead>
    <tr>
        <th data-sortable="" style="width: 19.6275%;"><a href="#" class="dataTable-sorter">使用者名稱</a></th>
        <th data-sortable="" style="width: 29.2264%;"><a href="#" class="dataTable-sorter">信箱</a></th>
        <th data-sortable="" style="width: 29.2264%;"><a href="#" class="dataTable-sorter">成人</a></th>
        <th data-sortable="" style="width: 29.2264%;"><a href="#" class="dataTable-sorter">小孩</a></th>
        <th data-sortable="" style="width: 29.2264%;"><a href="#" class="dataTable-sorter">預訂日期</a></th>
        <th data-sortable="" style="width: 29.2264%;"><a href="#" class="dataTable-sorter">預訂日期</a></th>
        <th data-sortable="" style="width: 29.2264%;"><a href="#" class="dataTable-sorter">預定總天數</a></th>
        <th data-sortable="" style="width: 29.2264%;"><a href="#" class="dataTable-sorter">總共價錢</a></th>
        

</thead>

<tbody>
    @foreach(var book in Model.BookAccmodations)
    {
        <tr>
            <td>@book.HotelUser.FullName</td>
            <td>@book.HotelUser.Email</td>
            <td>@book.Adult</td>
            <td>@book.Child</td>
            <td>@book.BookingFrom</td>
            <td>@book.BookingTo</td>
            <td>@{ 
                int TotalDays = Convert.ToInt32((book.BookingTo - book.BookingFrom).TotalDays);
            } @TotalDays </td>
            <td>@book.TotalAmount</td>
        


           
        </tr>
    }

</tbody>
