@model HotelManager.Web.ViewModels.GetAccomdationViewModel
@{
    ViewBag.Title = "ListRoom";
}


<div class="container-fluid page-header mb-5 p-0" style="background-image: url(img/carousel-1.jpg);">
    <div class="container-fluid page-header-inner py-5">
        <div class="container text-center pb-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">所有房間</h1>
           
        </div>
    </div>
</div>

@if (Model.accomdations != null && Model.accomdations.Count() > 0)
{



    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="section-title text-center text-primary text-uppercase">所有房間</h6>
                <h1 class="mb-5">Explore Our <span class="text-primary text-uppercase">所有房間</span></h1>
            </div>
            <div class="row g-4">
                @foreach (var accomdation in Model.accomdations)
                {
                    var picture = accomdation.accomdationPictures != null ? accomdation.accomdationPictures.FirstOrDefault() : null;
                    var pictureURL = picture != null ? picture.URL : "default-image.jpg";
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                        <div class="room-item shadow rounded overflow-hidden">
                            <div class="position-relative">
                                <img class="img-fluid" src="@Url.Content(@pictureURL)" alt="">

                            </div>
                            <div class="p-4 mt-2">
                                <div class="d-flex justify-content-between mb-3">
                                    <h5 class="mb-0">@accomdation.Name</h5>

                                </div>

                                <div class="d-flex justify-content-between">
                                    <a class="btn btn-sm btn-primary rounded py-2 px-4" href="@Url.Action("Detail","Hotel",new { Id = accomdation.Id })">瀏覽房間</a>

                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>


}



