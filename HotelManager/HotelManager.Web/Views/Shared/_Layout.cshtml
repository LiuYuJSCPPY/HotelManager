<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Hotelier - Hotel HTML Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/font/animate/animate.css" rel="stylesheet" />
    <link href="~/Content/font/animate/animate.min.css" rel="stylesheet" />
    <link href="~/Content/font/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font/css/style.css" rel="stylesheet" />
    <link href="~/Content/font/owlcarousel/assets/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/font/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/font/owlcarousel/assets/owl.theme.default.css" rel="stylesheet" />
    <link href="~/Content/font/owlcarousel/assets/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/Content/font/owlcarousel/assets/owl.theme.green.css" rel="stylesheet" />
    <link href="~/Content/font/owlcarousel/assets/owl.theme.green.min.css" rel="stylesheet" />
    <link href="~/Content/font/tempusdominus/css/tempusdominus-bootstrap-4.css" rel="stylesheet" />
    <link href="~/Content/font/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <!-- Libraries Stylesheet -->
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.13.1.min.js"></script>
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />

    <link href="~/Content/jquery-ui.structure.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.theme.min.css" rel="stylesheet" />
</head>

<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Header Start -->
        <div class="container-fluid bg-dark px-0">
            <div class="row gx-0">
                <div class="col-lg-3 bg-dark d-none d-lg-block">
                    <a href="@Url.Action("ListRoom","Hotel")" class="navbar-brand w-100 h-100 m-0 p-0 d-flex align-items-center justify-content-center">
                        <h1 class="m-0 text-primary text-uppercase">飯店</h1>
                    </a>
                </div>
                <div class="col-lg-9">
                   
                    <nav class="navbar navbar-expand-lg bg-dark navbar-dark p-3 p-lg-0">
                        <a href="@Url.Action("ListRoom","Hotel")" class="navbar-brand d-block d-lg-none">
                            <h1 class="m-0 text-primary text-uppercase">飯店</h1>
                        </a>
                        <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                            <div class="navbar-nav mr-auto py-0">
                              
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <a href="@Url.Action("Register", "Account")" class="nav-item nav-link">註冊</a>
                                    <a href="@Url.Action("Login", "Account" )" class="nav-item nav-link">登入</a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Index", "Manage")" class="nav-item nav-link">H! @User.Identity.Name</a>
                                    <a href="@Url.Action("Index", "Accomdations",new { Area = "Dashboard" })" class="nav-item nav-link">飯店管理</a>
                                }

                            </div>
                    
                    </nav>
                </div>
            </div>
        </div>
        <!-- Header End -->
        <!-- Page Header Start -->
       
        <!-- Page Header End -->
        <!-- Booking Start -->

        <!-- Booking End -->
        <!-- Room Start -->
        @RenderBody()
      
        <!-- Room End -->
        <!-- Testimonial Start -->

        <!-- Testimonial End -->
        <!-- Newsletter Start -->

        <!-- Footer End -->
        <!-- Back to Top -->
       
    </div>

    <!-- JavaScript Libraries -->
 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    
   
    <script src="~/Scripts/Font/js/counterup.min.js"></script>
    <script src="~/Scripts/Font/js/easing.js"></script>
    <script src="~/Scripts/Font/js/easing.min.js"></script>
    <script src="~/Scripts/Font/js/main.js"></script>
    <script src="~/Scripts/Font/js/moment-timezone.min.js"></script>
    <script src="~/Scripts/Font/js/owl.carousel.js"></script>
    <script src="~/Scripts/Font/js/moment.min.js"></script>
    <script src="~/Scripts/Font/js/owl.carousel.min.js"></script>
    <script src="~/Scripts/Font/js/tempusdominus-bootstrap-4.js"></script>
    <script src="~/Scripts/Font/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/Scripts/Font/js/waypoints.min.js"></script>
    <script src="~/Scripts/Font/js/wow.js"></script>
    <script src="~/Scripts/Font/js/wow.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <!-- Template Javascript -->
  
</body>

</html>


